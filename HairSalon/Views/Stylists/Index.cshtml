@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId }) Speciality: @stylist.StylistSpeciality</li>
  }
</ul>

<p>@Html.ActionLink("Add new stylist", "Create")</p>
